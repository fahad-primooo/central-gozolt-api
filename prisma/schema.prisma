generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}



model User {
  id          Int       @id @default(autoincrement())
  
  // Basic Information
  firstName   String    @map("first_name")
  lastName    String    @map("last_name")
  displayName String    @map("display_name")
  username    String    @unique
  
  // Contact Information
  email       String    @unique
  countryCode String    @map("country_code")
  phoneNumber String    @map("phone_number")
  
  // Security (password can be null because using otp for auth)
  password    String?
  
  // Verification Status
  emailVerified    Boolean   @default(false) @map("email_verified")
  emailVerifiedAt  DateTime? @map("email_verified_at")
  phoneVerified    Boolean   @default(true) @map("phone_verified")
  phoneVerifiedAt  DateTime? @map("phone_verified_at")
  
  // Timestamps
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  deletedAt   DateTime? @map("deleted_at")
  
  // Additional fields for future use
  avatar      String?
  bio         String?   @db.Text
  status      UserStatus @default(ACTIVE)
  lastLoginAt DateTime? @map("last_login_at")
  
  @@unique([countryCode, phoneNumber])
  @@index([email])
  @@index([username])
  @@index([countryCode, phoneNumber])
  @@map("users")
}

model PhoneVerification {
  id          Int       @id @default(autoincrement())
  
  // Phone Information
  countryCode String    @map("country_code")
  phoneNumber String    @map("phone_number")
  
  // OTP Details
  otp         String?
  channel     String    @default("whatsapp") // whatsapp or sms
  verifySid   String?   @map("verify_sid") // Twilio Verify SID
  verified    Boolean   @default(false)
  
  // Expiration & Tracking
  expiresAt   DateTime  @map("expires_at")
  attempts    Int       @default(0)
  maxAttempts Int       @default(5) @map("max_attempts")
  
  // Timestamps
  createdAt   DateTime  @default(now()) @map("created_at")
  verifiedAt  DateTime? @map("verified_at")
  
  @@unique([countryCode, phoneNumber])
  @@index([countryCode, phoneNumber])
  @@index([expiresAt])
  @@map("phone_verifications")
}

enum UserStatus {
  ACTIVE
  INACTIVE
  SUSPENDED
  DELETED
}


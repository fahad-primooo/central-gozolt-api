generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}



model User {
  id          Int       @id @default(autoincrement())
  
  // Basic Information
  firstName   String    @map("first_name")
  lastName    String    @map("last_name")
  displayName String    @map("display_name")
  username    String    @unique
  
  // Contact Information
  email       String    @unique
  countryCode String    @map("country_code")
  phoneNumber String    @map("phone_number")
  
  // Security (password can be null because using otp for auth)
  password    String?
  
  // Verification Status
  emailVerified    Boolean   @default(false) @map("email_verified")
  emailVerifiedAt  DateTime? @map("email_verified_at")
  phoneVerified    Boolean   @default(true) @map("phone_verified")
  phoneVerifiedAt  DateTime? @map("phone_verified_at")
  
  // Timestamps
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  deletedAt   DateTime? @map("deleted_at")
  
  // Additional fields for future use
  avatar      String?
  bio         String?   @db.Text
  status      UserStatus @default(ACTIVE)
  lastLoginAt DateTime? @map("last_login_at")
  
  // Relations
  rewardAccount RewardAccount?
  tokens      Token[]
  
  @@unique([countryCode, phoneNumber])
  @@index([email])
  @@index([username])
  @@index([countryCode, phoneNumber])
  @@map("users")
}

model Token {
  id          Int       @id @default(autoincrement())
  
  // Token Information
  name        String    @default("auth_token")
  token       String    @unique @db.VarChar(255) // JWT ID (JTI) for tracking
  
  // User Relation
  userId      Int       @map("user_id")
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Token Metadata
  lastUsedAt  DateTime? @map("last_used_at")
  expiresAt   DateTime? @map("expires_at")
  
  // Timestamps
  createdAt   DateTime  @default(now()) @map("created_at")
  
  @@index([userId])
  @@index([token])
  @@map("tokens")
}

model PhoneVerification {
  id          Int       @id @default(autoincrement())
  
  // Phone Information
  countryCode String    @map("country_code")
  phoneNumber String    @map("phone_number")
  
  // OTP Details
  otp         String?
  channel     String    @default("whatsapp") // whatsapp or sms
  verifySid   String?   @map("verify_sid") // Twilio Verify SID
  verified    Boolean   @default(false)
  
  // Expiration & Tracking
  expiresAt   DateTime  @map("expires_at")
  attempts    Int       @default(0)
  maxAttempts Int       @default(5) @map("max_attempts")
  
  // Timestamps
  createdAt   DateTime  @default(now()) @map("created_at")
  verifiedAt  DateTime? @map("verified_at")
  
  @@unique([countryCode, phoneNumber])
  @@index([countryCode, phoneNumber])
  @@index([expiresAt])
  @@map("phone_verifications")
}

model RewardAccount {
  id              Int       @id @default(autoincrement())
  
  // Direct User relation (instead of polymorphic)
  userId          Int       @unique @map("user_id")
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Balance & Level
  pointsBalance   Int       @default(0) @map("points_balance")
  level           Int       @default(1)
  
  // Timestamps
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")
  
  // Relations
  transactions    RewardTransaction[]
  
  @@index([userId])
  @@map("reward_accounts")
}

model RewardRule {
  id              Int       @id @default(autoincrement())
  
  // Rule Details
  actionType      String    @map("action_type") // e.g., "ride_completed", "referral", "registration"
  serviceType     String?   @map("service_type") // e.g., "taxi", "delivery", null for all
  pointsAwarded   Int       @map("points_awarded")
  description     String?   @db.Text
  
  // Status
  isActive        Boolean   @default(true) @map("is_active")
  
  // Timestamps
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")
  
  @@index([actionType, serviceType])
  @@map("reward_rules")
}

model RewardTransaction {
  id              Int       @id @default(autoincrement())
  
  // Account relation
  rewardAccountId Int       @map("reward_account_id")
  rewardAccount   RewardAccount @relation(fields: [rewardAccountId], references: [id], onDelete: Cascade)
  
  // Transaction Details
  actionType      String    @map("action_type") // e.g., "ride_completed", "redemption"
  points          Int       // Positive for earning, negative for redemption
  
  // Source (polymorphic relation)
  sourceType      String?   @map("source_type") // e.g., "RideRequest", "Order"
  sourceId        Int?      @map("source_id")
  
  // Redemption
  isRedeemed      Boolean   @default(false) @map("is_redeemed")
  
  // Metadata (JSON)
  metadata        Json?
  
  // Timestamps
  createdAt       DateTime  @default(now()) @map("created_at")
  
  @@index([rewardAccountId])
  @@index([sourceType, sourceId])
  @@index([actionType])
  @@map("reward_transactions")
}

enum UserStatus {
  ACTIVE
  INACTIVE
  SUSPENDED
  DELETED
}

